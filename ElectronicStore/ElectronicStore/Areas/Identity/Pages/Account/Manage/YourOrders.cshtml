@page
@using ElectronicStore.Ultilities
@model ElectronicStore.Areas.Identity.Pages.Account.Manage.YourOrdersModel

@{
    ViewData["Title"] = "YourOrders";
}

<h2>Your Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Appointments.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Products.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].feeShip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Appointments.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Order) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Appointments.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Products.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.feeShip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                @Enum.GetName(typeof(SD.Status), item.Appointments.Status)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
